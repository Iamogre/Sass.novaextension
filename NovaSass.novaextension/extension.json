{
    "identifier": "vinecode.NovaSass",
    "name": "NovaSass",
    "vendor": "Vine Code Limited",
    "description": "Automatically compile scss when the active editor saves.",
    "version": "0.5",
    "categories": ["formatters"],
    "repository": "https://github.com/vinecode/NovaSass",
    "bugs": "https://github.com/vinecode/NovaSass/issues",    
    "license": "MIT",
    "main": "main.js",
    "entitlements": {
        "process": true
    },    
    "commands": {
        "editor": [
            {
                "title": "Compile SCSS",
                "command": "novaSass.compileFile"
            }
        ]
    },
    "config": [
        {
            "key": "VineCode.Sass.compileOnSave",
            "title": "Compile on Save",
            "description": "Automatically compile scss when the active editor saves.",
            "type": "boolean",
            "default": true
        }
    ]    
}
